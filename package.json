{
  "name": "type-assurer",
  "version": "0.0.1",
  "description": "TypeScript library that provides shorthand type assertions and type guard functions for multiple types.",
  "repository": "git@github.com:hacomono-lib/type-assurer.git",
  "author": "uyamanaka <ushio.yamanaka@hacomono.co.jp>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vitest",
    "build": "tsup",
    "test": "run-p test:*",
    "test:spec": "vitest --run --coverage",
    "test:spec-d": "vitest typecheck --run",
    "test:type": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint --ext .ts .",
    "format": "prettier --write . --ignore-path=.eslintignore",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitest/coverage-c8": "^0.30.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "latest",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.7",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "vitest": "^0.30.0",
    "yarn-run-all": "latest"
  },
  "peerDependencies": {
    "typescript": ">= 4.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
